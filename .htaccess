# Google Drive Video Player - Apache Configuration
# Bu dosya Apache web sunucusu için güvenlik ve performans ayarları içerir

# URL Rewriting
RewriteEngine On

# HTTPS yönlendirmesi (isteğe bağlı)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Ana dizine yönlendirme
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ players/$1.php [L]

# Güvenlik başlıkları
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options SAMEORIGIN
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

# Content Security Policy
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' *.googleapis.com *.gstatic.com *.jquery.com *.bootstrap.com *.jsdelivr.net *.cdnjs.cloudflare.com *.fontawesome.com *.plyr.io *.zencdn.net; style-src 'self' 'unsafe-inline' *.googleapis.com *.gstatic.com *.bootstrap.com *.jsdelivr.net *.cdnjs.cloudflare.com *.fontawesome.com *.plyr.io *.zencdn.net; img-src 'self' data: *.googleusercontent.com *.googleapis.com *.gstatic.com; media-src 'self' *.googleapis.com *.googlevideo.com drive.google.com; frame-src 'self' drive.google.com *.drive.google.com; font-src 'self' *.googleapis.com *.gstatic.com *.jsdelivr.net *.cdnjs.cloudflare.com *.fontawesome.com; connect-src 'self' *.googleapis.com; object-src 'none'; base-uri 'self';"

# Dosya uzantısı gizleme
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]*)$ $1.php [NC,L]

# Güvenlik - Hassas dosyaları engelle
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|conf|bak|backup|swp|tmp)$">
    Require all denied
</FilesMatch>

# Config ve log dosyalarını engelle
<Files "config.php">
    Require all denied
</Files>

<Files ".env">
    Require all denied
</Files>

# Log dizinini engelle
RedirectMatch 403 ^/logs/.*$

# Cache dizinini engelle (gerekirse)
# RedirectMatch 403 ^/cache/.*$

# Dizin listelemeyi kapat
Options -Indexes

# Hata sayfaları
ErrorDocument 403 /error.php?code=403
ErrorDocument 404 /error.php?code=404
ErrorDocument 500 /error.php?code=500

# Performans - Gzip sıkıştırma
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache kontrolü
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Resimler
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    
    # CSS ve JS
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fontlar
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
    
    # JSON
    ExpiresByType application/json "access plus 1 hour"
</IfModule>

# MIME tipleri
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType font/woff .woff
    AddType font/woff2 .woff2
</IfModule>

# Rate Limiting (mod_rewrite ile basit)
<IfModule mod_rewrite.c>
    # Çok hızlı istekleri engelle
    RewriteEngine On
    
    # Aynı IP'den çok hızlı istekler (1 saniyede 10'dan fazla)
    # RewriteMap throttle "prg:/path/to/throttle.pl"
    # RewriteCond ${throttle:%{REMOTE_ADDR}} ^[1-9][0-9]$
    # RewriteRule . - [R=503,L]
</IfModule>

# Bot ve kötü niyetli isteği engelle
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Boş user agent'ları engelle
    RewriteCond %{HTTP_USER_AGENT} ^-?$
    RewriteRule . - [R=403,L]
    
    # Bilinen kötü botları engelle
    RewriteCond %{HTTP_USER_AGENT} (libwww-perl|wget|python|nikto|curl|scan|java|winhttp|clshttp|loader) [NC]
    RewriteRule . - [R=403,L]
    
    # SQL injection denemelerini engelle
    RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=(http|https|ftp|ftps): [NC,OR]
    RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=(..//?)+ [NC,OR]
    RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=/([a-z0-9_.]//?)+ [NC]
    RewriteRule . - [R=403,L]
</IfModule>

# PHP güvenlik ayarları
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_flag register_globals Off
    php_flag magic_quotes_gpc Off
    php_flag allow_url_fopen Off
    php_flag allow_url_include Off
    php_value max_execution_time 30
    php_value max_input_time 30
    php_value memory_limit 128M
    php_value post_max_size 10M
    php_value upload_max_filesize 10M
</IfModule>

# Server bilgilerini gizle
ServerTokens Prod
Header unset Server
Header always unset X-Powered-By

# SSL/TLS ayarları (HTTPS kullanıyorsanız)
<IfModule mod_headers.c>
    # HSTS (HTTP Strict Transport Security)
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # HTTPS yönlendirmesi sonrası için
    <If "%{HTTPS} == 'on'">
        Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    </If>
</IfModule>

# Özel hata sayfaları için
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^error/?$ error.php [L]

# API endpoint'leri için (gelecekteki geliştirmeler)
RewriteRule ^api/(.*)$ api/index.php [QSA,L]

# Çoklu dil desteği (isteğe bağlı)
# RewriteRule ^(tr|en)/(.*)$ $2?lang=$1 [QSA,L]

# Bakım modu (gerektiğinde aktifleştirin)
# RewriteCond %{REQUEST_URI} !^/maintenance.php$
# RewriteCond %{REMOTE_ADDR} !^123\.456\.789\.000$
# RewriteRule .* /maintenance.php [R=503,L]

# Player sayfaları için özel yönlendirme
RewriteRule ^player/([a-z]+)/?$ players/$1.php [QSA,L]

# Embed sayfaları için
RewriteRule ^embed/([a-z]+)/([a-zA-Z0-9_-]+)/?$ players/$1.php?id=$2 [QSA,L]